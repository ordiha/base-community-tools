pragma solidity ^0.8.0;

contract EventLogger {
    address public owner;
    string[] public logs;

    event LogRecorded(address indexed user, string log, uint256 timestamp);

    constructor() {
        owner = msg.sender;
    }

    function recordLog(string memory _log) public {
        logs.push(_log);
        emit LogRecorded(msg.sender, _log, block.timestamp);
    }

    function getLogCount() public view returns (uint256) {
        return logs.length;
    }
}
